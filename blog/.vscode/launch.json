{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}/dist",
            "userDataDir": "${workspaceRoot}/.vscode/chrome",
            "port": 9222,
            "sourceMapPathOverrides": {
                "webpack:///./*":"${workspaceRoot}\\*"
            }
        },
        {
            "name": "Attach to Chrome, with sourcemaps",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}/dist",
            "sourceMapPathOverrides": {
                "webpack:///./*":"${workspaceRoot}\\*"
            }            
        }
    ]
}